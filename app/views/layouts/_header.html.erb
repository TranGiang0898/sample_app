<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to t(".heado_title"), root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to t(".head_home"), root_path %></li>
        <li><%= link_to t(".head_help"), help_path %></li>
        <% if logged_in? %>
          <li><%= link_to t(".head_login"), "#" %></li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <%= t(".head_account") %> <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to t(".head_profile"), current_user %></li>
              <li><%= link_to t(".head_settings"), "#" %></li>
              <li class="divider"></li>
              <li>
                <%= link_to t(".head_logout"), logout_path, method: :delete %>
              </li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to t(".head_log"), login_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
